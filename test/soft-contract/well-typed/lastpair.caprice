  include splayable;
*)

let is_nonempty ls = 
  match ls with
  | [] -> false
  | _ -> true
  end

let rec lastpair (type a') (x : list a' | is_nonempty x) : { l : list a' | is_nonempty l } =
  match x with
  | h :: xs ->
    match xs with
    | [] -> [ h ]
    | _ -> lastpair a' xs
    end
  end
