let F :
  (S : sig
    val t : type --> type
    val empty : (type a) -> t a
    val add : (type a) -> a -> t a -> t a
    val map : (type a) -> (b : type) -> t a -> (a -> b) -> t b
  end) -> sig
    val t : type --> type (* notably, `val t = S.t` does not work here because S.t is a function, not a type *)
    val empty : (type a) -> t a
    val add : (type a) -> a -> t a -> t a
    val map : (type a b) -> t a -> (a -> b) -> t b
    val of_list : (type a) -> list a -> t a
  end
  =
  fun S -> struct
    let t = S.t
    let empty = S.empty
    let add = S.add
    let map = S.map

    let of_list a ls =
      let rec loop (acc : t a) (ls : list a) : t a =
        match ls with
        | [] -> acc
        | hd :: tl -> loop (add a hd acc) tl
        end
      in
      loop (empty a) ls
  end

let M = struct
  let t = list
  let empty _ = []
  let add _ x xs = x :: xs
  let rec map (type a b) (xs : t a) (f : a -> b) : t b =
    match xs with
    | [] -> []
    | hd :: tl -> f hd :: map a b tl f
    end
end

