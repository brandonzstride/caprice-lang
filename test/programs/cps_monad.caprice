let t a =
  { run : (type r) -> (a -> r) -> r }

let bind (type a b) (x : t a) (f : a -> t b) : t b =
  { run = fun r k ->
    x.run r (fun a ->
      (f a).run r k
    )
  }

let return (type a) (a : a) : t a =
  { run = fun r k -> k a }

let run (type a r) (x : t a) (k : a -> r) : r =
  x.run r k

