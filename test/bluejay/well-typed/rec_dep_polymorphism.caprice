let t a b i =
  if i % 2 == 0
  then b
  else a

(* 'a and 'b alternate by call here; so can't assume 'a stays the same in recursive calls *)
let rec f (type a' b') (dependent i : int) (a : a') (b : b') : t a' b' i =
  if i == 0
  then b
  else f b' a' (i - 1) b a

let res = f int bool 2 0 true
