{
  "name": "caprice-language",
  "displayName": "Caprice Language",
  "description": "Syntax highlighting for Caprice programming language",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "caprice",
        "aliases": [
          "Caprice",
          "caprice"
        ],
        "extensions": [
          ".caprice"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/freehand-icon.png",
          "dark": "./icons/freehand-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "caprice",
        "scopeName": "source.caprice",
        "path": "./syntaxes/caprice.tmLanguage.json"
      }
    ]
  }
}